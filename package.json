{
  "name": "setup-macports",
  "version": "1.0.0",
  "description": "Install and configure MacPorts on macOS runners",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/main.js -o dist/ --minify --v8-cache",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "licensed-check": "src/misc/licensed-check.sh",
    "licensed-generate": "src/misc/licensed-generate.sh",
    "all": "npm run build && npm run format-check && npm run lint && npm test && npm run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ukiryu/setup-macports.git"
  },
  "keywords": [
    "github-actions",
    "macports",
    "macos",
    "package-manager"
  ],
  "dependencies": {
    "@actions/cache": "^4.0.0",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^3.0.0",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "licensed": "^1.5.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "@vercel/ncc": "^0.38.3"
  },
  "engines": {
    "node": ">=20"
  }
}
