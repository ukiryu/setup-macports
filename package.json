{
  "name": "setup-macports",
  "version": "1.0.2",
  "description": "Install and configure MacPorts on macOS runners",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/main.js -o dist/ --minify",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "licensed-check": "src/misc/licensed-check.sh",
    "licensed-generate": "src/misc/licensed-generate.sh",
    "all": "npm run build && npm run format-check && npm run lint && npm run test:run && npm run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ukiryu/setup-macports.git"
  },
  "keywords": [
    "github-actions",
    "macports",
    "macos",
    "package-manager"
  ],
  "dependencies": {
    "@actions/cache": "^6.0.0",
    "@actions/core": "^3.0.0",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^9.0.0",
    "@actions/io": "^3.0.0",
    "@actions/tool-cache": "^2.0.2",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^25.2.3",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^17.3.0",
    "prettier": "^3.4.2",
    "simple-git": "^3.30.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "glob": "^9.0.0"
  },
  "engines": {
    "node": ">=24"
  }
}
